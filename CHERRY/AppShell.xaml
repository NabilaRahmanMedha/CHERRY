<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:CHERRY.Views"
       x:Class="CHERRY.AppShell"
       Title="CHERRY"
       Shell.TabBarBackgroundColor="White"
       Shell.TabBarForegroundColor="HotPink"
       Shell.TabBarTitleColor="HotPink"
       Shell.TabBarUnselectedColor="Gray">

    <TabBar>
        <Tab Title="Cycle" Route="CyclePage" Icon="cycle_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:CyclePage}" />
        </Tab>
        <Tab Title="Calendar" Route="CalendarPage" Icon="calendar_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:CalendarPage}" />
        </Tab>
        <Tab Title="Emergency" Route="EmergencyPage" Icon="emergency_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:EmergencyPage}" />
        </Tab>
        <Tab Title="ChatBot" Route="ChatBotPage" Icon="chatbot_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:ChatBotPage}" />
        </Tab>
        <Tab Title="Reports" Route="ReportsPage" Icon="reports_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:ReportsPage}" />
        </Tab>
        <Tab Title="Profile" Route="ProfilePage" Icon="profile_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
