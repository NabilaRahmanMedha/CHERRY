<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CHERRY.Views.CalendarPage"
             Title="Calendar"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" RowSpacing="0">

        <!-- Month and Year Header -->
        <Label x:Name="MonthLabel"
               Text="NOVEMBER 2024"
               FontSize="20"
               HorizontalOptions="Center"
               Margin="0,20,0,10"
               TextColor="Black"
               FontAttributes="Bold"
               Grid.Row="0"/>

        <!-- Prediction Label -->
        <Label x:Name="PredictionLabel"
               Text="Track your cycles to get predictions"
               FontSize="14"
               HorizontalOptions="Center"
               Margin="0,0,0,10"
               TextColor="#6A5ACD"
               HorizontalTextAlignment="Center"
               Grid.Row="1"/>

        <!-- Calendar Grid -->
        <Grid x:Name="CalendarGrid"
              RowSpacing="10"
              ColumnSpacing="10"
              Padding="20,0,20,0"
              HorizontalOptions="Center"
              VerticalOptions="Start"
              Grid.Row="2">
            <!-- Dynamically generated in code-behind -->
        </Grid>

        <!-- Navigation Controls -->
        <Grid ColumnDefinitions="*,*" ColumnSpacing="20" 
              HorizontalOptions="Center" Grid.Row="3" Margin="0,10,0,5">
            <Button Text="◀" 
                    BackgroundColor="Transparent"
                    TextColor="#6A5ACD"
                    FontSize="16"
                    FontAttributes="Bold"
                    Clicked="OnPrevMonthClicked"/>
            <Button Text="▶" 
                    Grid.Column="1"
                    BackgroundColor="Transparent"
                    TextColor="#6A5ACD"
                    FontSize="16"
                    FontAttributes="Bold"
                    Clicked="OnNextMonthClicked"/>
        </Grid>

        <!-- Edit Button with Pink Border -->
        <Button Text="Edit Dates"
                BackgroundColor="Transparent"
                TextColor="#6A5ACD"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Grid.Row="4"
                Margin="0,5,0,20"
                Clicked="OnEditClicked">
            <Button.Triggers>
                <Trigger TargetType="Button" Property="IsEnabled" Value="True">
                    <Setter Property="BackgroundColor" Value="Transparent" />
                    <Setter Property="TextColor" Value="#6A5ACD" />
                    <Setter Property="BorderColor" Value="#FFB6C1" />
                    <Setter Property="BorderWidth" Value="2" />
                    <Setter Property="CornerRadius" Value="10" />
                    <Setter Property="Padding" Value="20,10" />
                </Trigger>
            </Button.Triggers>
        </Button>

    </Grid>
</ContentPage>