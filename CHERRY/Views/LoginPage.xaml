<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CHERRY.Views.LoginPage"
    BackgroundColor="White">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Login" FontSize="28" HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" TextColor="Black" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" TextColor="Black"  />

        <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="HotPink" TextColor="White" />

        <Label x:Name="MessageLabel" TextColor="Red" HorizontalOptions="Center" />

        <Button Text="Create Account" Clicked="OnRegisterNavigateClicked" />
    </VerticalStackLayout>


	</ContentPage>
