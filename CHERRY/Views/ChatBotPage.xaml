<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CHERRY.Views.ChatBotPage"
             Title="CherryMate 🍒">

    <Grid RowDefinitions="*,Auto,Auto,Auto" Padding="10">

        <!-- Messages area -->
        <ScrollView Grid.Row="0" x:Name="MessagesScroll">
            <VerticalStackLayout x:Name="MessagesStack" Spacing="10" Padding="0,5"/>
        </ScrollView>

        <!-- Typing Indicator -->
        <Label x:Name="TypingIndicator"
               Text="CherryMate is typing..."
               FontAttributes="Italic"
               TextColor="Gray"
               IsVisible="False"
               HorizontalOptions="Start"
               Margin="10,0,0,5"
               Grid.Row="1"/>

        <!-- Quick suggestion buttons -->
        <HorizontalStackLayout Grid.Row="2" Spacing="10" Padding="5">
            <Button Text="Tips" 
                    Clicked="OnSuggestionClicked"
                    BackgroundColor="#E0BBE4"
                    CornerRadius="20"
                    Padding="15,5"/>
            <Button Text="Healthy Diet" 
                    Clicked="OnSuggestionClicked"
                    BackgroundColor="#957DAD"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="15,5"/>
            <Button Text="Remedies" 
                    Clicked="OnSuggestionClicked"
                    BackgroundColor="#D291BC"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="15,5"/>
        </HorizontalStackLayout>

        <!-- Input area -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto" Padding="8" BackgroundColor="#f2f2f2">
            <Entry x:Name="UserInput"
                   Placeholder="Ask me anything about periods..."
                   FontSize="16"
                   VerticalOptions="Center" />
            <Button Text="Send"
                    Grid.Column="1"
                    Clicked="OnSendClicked"
                    BackgroundColor="HotPink"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="12,6"
                    Margin="8,0,0,0"/>
        </Grid>
    </Grid>
</ContentPage>
